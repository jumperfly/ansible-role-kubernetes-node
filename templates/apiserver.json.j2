{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "kube-apiserver",
    "namespace": "kube-system"
  },
  "spec": {
    "hostNetwork": true,
    "containers": [
      {
        "name": "kube-apiserver",
        "image": "k8s.gcr.io/hyperkube:v{{ kube_version }}",
        "command": [
          "/hyperkube",
          "apiserver",
          "--allow-privileged=true",
          "--advertise-address={{ kube_apiserver_listen_ip }}",
          "--bind-address={{ kube_apiserver_listen_ip }}",
          "--etcd-servers=
            {%- for h in groups[kube_apiserver_etcd_group] -%}
              {%- set iface = hostvars[h].etcd_iface | default(hostvars[h].ansible_default_ipv4.alias) -%}
              https://{{ hostvars[h]['ansible_' + iface].ipv4.address }}:2379
              {%- if not loop.last %},{% endif %}
            {%- endfor -%}
          ",
          "--etcd-cafile={{ kube_apiserver_etcd_ca_cert }}",
          "--etcd-certfile={{ kube_apiserver_etcd_cert }}",
          "--etcd-keyfile={{ kube_apiserver_etcd_key }}",
          "--enable-admission-plugins={{ kube_apiserver_admission_plugins }}",
          "--tls-cert-file={{ kube_apiserver_cert }}",
          "--tls-private-key-file={{ kube_apiserver_key }}",
          "--client-ca-file={{ kube_apiserver_ca_cert }}",
          "--authorization-mode=Node,RBAC",
          "--anonymous-auth=true"
        ],
        "ports": [
          {
            "name": "https",
            "hostPort": 443,
            "containerPort": 443
          },
          {
            "name": "local",
            "hostPort": 8080,
            "containerPort": 8080
          }
        ],
        "volumeMounts": [
          {
            "name": "certdir",
            "mountPath": "{{ kube_cert_dir }}",
            "readOnly": true
          },
          {
            "name": "varlog",
            "mountPath": "/var/log"
          }
        ],
        "livenessProbe": {
          "httpGet": {
            "scheme": "HTTP",
            "host": "127.0.0.1",
            "port": 8080,
            "path": "/healthz"
          },
          "initialDelaySeconds": 15,
          "timeoutSeconds": 15
        }
      }
    ],
    "volumes": [
      {
        "name": "certdir",
        "hostPath": {
          "path": "{{ kube_cert_dir }}"
        }
      },
      {
        "name": "varlog",
        "hostPath": {
          "path": "/var/log"
        }
      }
    ]
  }
}
